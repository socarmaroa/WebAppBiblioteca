@model WebAppBiblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Registrar Prestamo";
}

<h2>Registro del prestamo</h2>

<h4>Se registra el libro que se va a prestar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibroId" class="control-label"></label>
                <select asp-for="LibroId" class="form-control" asp-items="ViewBag.LibroId"></select>
                <span asp-validation-for="LibroId" class="text-danger"></span>
                @Html.ActionLink("Registrar Libro","Create","Libros")
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar prestamo" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Gestor prestamos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
